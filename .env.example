# API Keys - Choose your AI provider
# OpenAI (ChatGPT)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# AI Provider Selection (openai or gemini)
AI_PROVIDER=openai

# Database Configuration
DATABASE_URL=postgresql://localhost/opera_research
DB_HOST=localhost
DB_PORT=5432
DB_NAME=opera_research
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Alternative: Neon (Serverless Postgres)
# DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/dbname

# Alternative: Supabase
# DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres

# Scraping Configuration - Compliant & Ethical Settings
SCRAPER_USER_AGENT=OperaResearchBot/1.0
SCRAPER_CONTACT_INFO=https://github.com/austinkness/opera-research-agentic-system
REQUESTS_PER_SECOND=1.0
MIN_DELAY_SECONDS=2.0
CACHE_TTL_SECONDS=86400
REQUEST_TIMEOUT=30

# FastAPI Backend
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend
REACT_APP_API_URL=http://localhost:8000

# Vector Database (Optional - Future Feature)
VECTOR_DB_PATH=./backend/vectorstore
CHROMADB_ENABLED=false

# dbt Configuration
DBT_PROFILES_DIR=./dbt_opera
DBT_TARGET=dev

# Application Settings
LOG_LEVEL=INFO
DEBUG=False
ENVIRONMENT=development
